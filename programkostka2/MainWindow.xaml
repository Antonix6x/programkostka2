<Window x:Class="programkostka2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:programkostka2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.488,0.459" Background="#F5F5DC">
        <Button Content="powtórz rzut" HorizontalAlignment="Left" Margin="426,318,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.517,0.49" Height="55" Width="137" Background="#D2691E" Click="powtorz_Click"/>
