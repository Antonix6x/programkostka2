        <Label Content="Gra w kosci: Antoni Wittstock" HorizontalAlignment="Center" FontSize="40" Foreground="#A52A2A" Margin="0,0,0,357"/>
        <Slider x:Name="liczbakostek" Minimum="1" Maximum="9"  Width="120" RenderTransformOrigin="0.219,0.559" Margin="10,140,670,269"/>
        <Slider x:Name="liczbascian" Minimum="4" Maximum="10" Width="120" RenderTransformOrigin="0.219,0.559" Margin="10,192,670,217"/>
        <TextBox HorizontalAlignment="Left" Margin="12,117,0,0" TextWrapping="Wrap" Text="Ustaw liczbę kostek" VerticalAlignment="Top" Width="120" Background="#F5F5DC"/>
        <TextBox HorizontalAlignment="Left" Margin="12,169,0,0" TextWrapping="Wrap" Text="Ustaw liczbę ścian" VerticalAlignment="Top" Width="120" Background="#F5F5DC"/>
        <TextBox x:Name="sumaWyniku" HorizontalAlignment="Left" Margin="137,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Height="58"/>
        <TextBox x:Name="sumaWyniku2" HorizontalAlignment="Left" Margin="286,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="58"/>
        <TextBox x:Name="wynikirzutuText" HorizontalAlignment="Left" Margin="438,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="58"/>
        <TextBox x:Name="sumaOgolem" HorizontalAlignment="Left" Margin="611,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="58"/>
    </Grid>
</Window>
